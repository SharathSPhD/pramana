% neurips_2024.sty
% NeurIPS 2024 LaTeX style file
% Based on standard NeurIPS formatting requirements

\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{neurips_2024}[2024/01/01 NeurIPS 2024 style file]

% Standard packages
\RequirePackage{times}      % Use Times font
\RequirePackage{helvet}     % Use Helvetica for sans-serif
\RequirePackage{courier}    % Use Courier for typewriter
\RequirePackage{graphicx}   % Enhanced graphics support
\RequirePackage{url}        % Better URL formatting
\RequirePackage{booktabs}  % Professional tables
\RequirePackage{amsfonts}   % AMS fonts
\RequirePackage{nicefrac}   % Nice fractions
\RequirePackage{microtype}  % Microtypography

% Page layout
\RequirePackage[letterpaper,margin=1in]{geometry}

% Hyperref setup
\RequirePackage[colorlinks=true,linkcolor=black,anchorcolor=black,citecolor=black,filecolor=black,menucolor=black,runcolor=black,urlcolor=black]{hyperref}

% Bibliography
\RequirePackage{natbib}

% Math packages
\RequirePackage{amsmath}
\RequirePackage{amssymb}
\RequirePackage{amsthm}

% Theorem environments
\newtheorem{theorem}{Theorem}
\newtheorem{lemma}{Lemma}
\newtheorem{proposition}{Proposition}
\newtheorem{corollary}{Corollary}
\newtheorem{definition}{Definition}
\newtheorem{remark}{Remark}
\newtheorem{example}{Example}

% Formatting commands
\newcommand{\fix}{\marginpar{FIX}}
\newcommand{\new}{\marginpar{NEW}}

% Page numbering
\pagestyle{plain}

% Title formatting
\newcommand{\maketitlehooka}{}
\newcommand{\maketitlehookb}{}
\newcommand{\maketitlehookc}{}
\newcommand{\maketitlehookd}{}

% NeurIPS-specific formatting
\setlength{\parindent}{0pt}
\setlength{\parskip}{6pt plus 2pt minus 1pt}

% Abstract formatting
\renewenvironment{abstract}{%
  \small
  \begin{center}%
    {\bfseries \abstractname\vspace{-.5em}\vspace{\z@}}%
  \end{center}%
  \quotation
}{%
  \endquotation
}

% Section formatting
\RequirePackage{titlesec}
\titleformat{\section}{\normalfont\Large\bfseries}{\thesection}{1em}{}
\titleformat{\subsection}{\normalfont\large\bfseries}{\thesubsection}{1em}{}
\titleformat{\subsubsection}{\normalfont\normalsize\bfseries}{\thesubsubsection}{1em}{}

% Table of contents depth
\setcounter{tocdepth}{2}

% Floats
\renewcommand{\topfraction}{0.95}
\renewcommand{\bottomfraction}{0.95}
\renewcommand{\textfraction}{0.05}
\renewcommand{\floatpagefraction}{0.8}

% Caption formatting
\RequirePackage{caption}
\captionsetup{font=small,labelfont=bf}

\endinput
